<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout_normal_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/btn_first_news"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_12sdp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false">

                <ImageView
                        android:id="@+id/image_news_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"></ImageView>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_first_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center"

                        android:textColor="#041343"
                        android:textSize="@dimen/normal_author_size"></TextView>

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_author"
                        android:layout_width="@dimen/normal_author_image_width"
                        android:layout_height="@dimen/normal_author_image_height"
                        android:background="?attr/selectableItemBackground"

                        android:src="@drawable/ava_link"></de.hdodenhof.circleimageview.CircleImageView>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_first_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="#041343"
                        android:textSize="@dimen/normal_title_size"></TextView>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                    <ImageButton
                            android:layout_width="@dimen/normal_dot_size_width"
                            android:layout_height="@dimen/normal_dot_size_height"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dots"
                            android:visibility="gone"></ImageButton>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.0"
                            android:gravity="end">

                        <TextView
                                android:id="@+id/tv_first_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:textColor="#8a96ad"
                                android:textSize="@dimen/normal_time_size"></TextView>

                        <TextView
                                android:id="@+id/tv_first_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/opensans_semibold"
                                android:textColor="#326dfa"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textSize="@dimen/normal_category_size"></TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#f4f4f4"></View>
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    android:layoutDirection="rtl"
                    tools:listitem="@layout/layout_third_tab_data_row"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>