<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/author_status_bg"
                android:fitsSystemWindows="true"
                android:gravity="center"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|snap">

                <com.ibt.ava.util.StatusBarView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/status"></com.ibt.ava.util.StatusBarView>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48sdp"
                            android:layout_gravity="center"
                            android:fitsSystemWindows="true"
                            app:contentInsetLeft="0dp"

                            app:contentInsetStart="0dp"
                            app:layout_collapseMode="pin"
                            app:popupTheme="@style/AppTheme.PopupOverlay">

                        <LinearLayout
                                android:id="@+id/layout_settings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:layout_marginStart="@dimen/base_padding_left"
                                android:layout_marginEnd="@dimen/base_padding_right"
                                android:fitsSystemWindows="true"
                                android:gravity="center|end"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                app:layout_collapseMode="parallax">

                            <ImageButton
                                    android:id="@+id/btn_back"
                                    android:layout_width="@dimen/_21sdp"
                                    android:layout_height="@dimen/_21sdp"
                                    android:layout_gravity="center"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/arrow_back"></ImageButton>

                            <TextView
                                    android:id="@+id/tv_category_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:textColor="#ffffff"
                                    android:maxLines="1"
                                    android:text="پرۆفایل"
                                    android:ellipsize="end"
                                    android:textSize="@dimen/normal_top_title_size"></TextView>
                        </LinearLayout>
                    </androidx.appcompat.widget.Toolbar>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:visibility="gone"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center|end"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/base_padding_left"
                                android:paddingEnd="@dimen/base_padding_right">

                            <ImageButton
                                    android:id="@+id/btn_add_list"
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/follow_detail"></ImageButton>

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                <TextView
                                        android:id="@+id/tv_first_author_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|end"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:gravity="center|end"
                                        android:textColor="#041343"
                                        android:textSize="@dimen/_16sdp"></TextView>

                                <TextView
                                        android:id="@+id/tv_category"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|end"
                                        android:fontFamily="@font/opensans_regular"
                                        android:gravity="center|end"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textColor="#8897AE"
                                        android:textSize="@dimen/_12sdp"></TextView>
                            </LinearLayout>


                            <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_author"
                                    android:layout_width="@dimen/_47sdp"
                                    android:layout_height="@dimen/_47sdp"
                                    android:background="?attr/selectableItemBackground"
                                    android:src="@drawable/ava_link"></de.hdodenhof.circleimageview.CircleImageView>


                        </LinearLayout>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="#f4f4f4"></View>
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>



        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:fillViewport="true"
                android:layoutDirection="rtl"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardElevation="0dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/base_padding_left"
                            android:layout_marginTop="@dimen/base_padding_top"
                            android:layout_marginEnd="@dimen/base_padding_right"
                            android:layout_marginBottom="@dimen/base_padding_bottom"
                            android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/avatar"></de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/opensans_bold"
                                android:textColor="#041343"
                                android:textSize="@dimen/_22sdp"></TextView>

                        <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/opensans_regular"
                                android:textColor="#485884"
                                android:textSize="@dimen/_15sdp"></TextView>


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:background="@drawable/edit_border"
                                android:orientation="vertical">

                            <LinearLayout
                                    android:id="@+id/layout_manage_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                <LinearLayout
                                        android:id="@+id/btn_manage_account"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_45sdp">

                                    <ImageView
                                            android:layout_width="@dimen/_24sdp"
                                            android:layout_height="@dimen/_24sdp"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_13sdp"
                                            android:src="@drawable/user"></ImageView>

                                    <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:layout_weight="1.0"
                                            android:fontFamily="@font/opensans_medium"
                                            android:gravity="center|start"
                                            android:text="بەڕێوەبردنی ئەکاونت"
                                            android:textColor="#041343"
                                            android:textSize="@dimen/_14sdp"></TextView>

                                    <ImageView
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_gravity="center"
                                            android:layout_marginEnd="@dimen/_13sdp"
                                            android:rotation="180"
                                            android:src="@drawable/right_arrow"></ImageView>

                                </LinearLayout>

                                <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="#f0f5fe"></View>
                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/layout_security"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                <LinearLayout
                                        android:id="@+id/btn_security"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_45sdp">

                                    <ImageView
                                            android:layout_width="@dimen/_22sdp"
                                            android:layout_height="@dimen/_22sdp"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_13sdp"
                                            android:src="@drawable/lock"></ImageView>

                                    <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:layout_weight="1.0"
                                            android:fontFamily="@font/opensans_medium"
                                            android:gravity="center|start"
                                            android:text="وشەی نهێنی نوێ بکەرەوە"
                                            android:textColor="#041343"
                                            android:textSize="@dimen/_14sdp"></TextView>

                                    <ImageView
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_gravity="center"
                                            android:layout_marginEnd="@dimen/_13sdp"

                                            android:rotation="180"
                                            android:src="@drawable/right_arrow"></ImageView>

                                </LinearLayout>

                                <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="#f0f5fe"></View>
                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/btn_notifications"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp">

                                <ImageView
                                        android:layout_width="@dimen/_22sdp"
                                        android:layout_height="@dimen/_22sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_13sdp"
                                        android:src="@drawable/bell"></ImageView>

                                <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_weight="1.0"
                                        android:fontFamily="@font/opensans_medium"
                                        android:gravity="center|start"
                                        android:text="ئاگادارکردنەوەکان"
                                        android:textColor="#041343"
                                        android:textSize="@dimen/_14sdp"></TextView>

                                <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="@dimen/_13sdp"
                                        android:rotation="180"

                                        android:src="@drawable/right_arrow"></ImageView>

                            </LinearLayout>

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:background="#f0f5fe"></View>

                            <LinearLayout
                                    android:id="@+id/btn_talktous"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp">

                                <ImageView
                                        android:layout_width="@dimen/_22sdp"
                                        android:layout_height="@dimen/_22sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_13sdp"
                                        android:src="@drawable/chat"></ImageView>

                                <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_weight="1.0"
                                        android:fontFamily="@font/opensans_medium"
                                        android:gravity="center|start"
                                        android:text="قسەمان لەگەڵ بکە"
                                        android:textColor="#041343"
                                        android:textSize="@dimen/_14sdp"></TextView>

                                <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="@dimen/_13sdp"
                                        android:rotation="180"

                                        android:src="@drawable/right_arrow"></ImageView>

                            </LinearLayout>

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:background="#f0f5fe"></View>

                            <LinearLayout
                                    android:id="@+id/btn_terms_of_use"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp">

                                <ImageView
                                        android:layout_width="@dimen/_22sdp"
                                        android:layout_height="@dimen/_22sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_13sdp"
                                        android:src="@drawable/file"></ImageView>

                                <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_weight="1.0"
                                        android:fontFamily="@font/opensans_medium"
                                        android:gravity="center|start"
                                        android:text="مەرجەکانی بەکارهێنان"
                                        android:textColor="#041343"
                                        android:textSize="@dimen/_14sdp"></TextView>

                                <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="@dimen/_13sdp"
                                        android:rotation="180"

                                        android:src="@drawable/right_arrow"></ImageView>

                            </LinearLayout>

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:background="#f0f5fe"></View>

                            <LinearLayout
                                    android:id="@+id/btn_privacy_policy"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp">

                                <ImageView
                                        android:layout_width="@dimen/_22sdp"
                                        android:layout_height="@dimen/_22sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_13sdp"
                                        android:src="@drawable/sheild"></ImageView>

                                <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_weight="1.0"
                                        android:fontFamily="@font/opensans_medium"
                                        android:gravity="center|start"
                                        android:text="سیاسەتی پاراستنی نهێنی"
                                        android:textColor="#041343"
                                        android:textSize="@dimen/_14sdp"></TextView>

                                <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="@dimen/_13sdp"
                                        android:rotation="180"

                                        android:src="@drawable/right_arrow"></ImageView>

                            </LinearLayout>



                            <LinearLayout
                                    android:id="@+id/layout_logout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="#f0f5fe"></View>
                                <LinearLayout
                                        android:id="@+id/btn_logout"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_45sdp">

                                    <ImageView
                                            android:layout_width="@dimen/_22sdp"
                                            android:layout_height="@dimen/_22sdp"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_13sdp"
                                            android:src="@drawable/upload"></ImageView>

                                    <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:layout_weight="1.0"
                                            android:fontFamily="@font/opensans_medium"
                                            android:gravity="center|start"
                                            android:text="دەرچوون لە دەرەوە"
                                            android:textColor="#041343"
                                            android:textSize="@dimen/_14sdp"></TextView>

                                    <ImageView
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_gravity="center"
                                            android:layout_marginEnd="@dimen/_13sdp"

                                            android:rotation="180"
                                            android:src="@drawable/right_arrow"></ImageView>

                                </LinearLayout>

                                <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="#f0f5fe"></View>

                            </LinearLayout>


                            <LinearLayout
                                    android:id="@+id/btn_delete"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp">

                                <ImageView
                                        android:layout_width="@dimen/_22sdp"
                                        android:layout_height="@dimen/_22sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_13sdp"
                                        android:src="@drawable/delete"></ImageView>

                                <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_weight="1.0"
                                        android:fontFamily="@font/opensans_medium"
                                        android:gravity="center|start"
                                        android:text="ئەکاونتەکە بسڕەوە"
                                        android:textColor="#de635a"
                                        android:textSize="@dimen/_14sdp"></TextView>

                                <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="@dimen/_13sdp"
                                        android:rotation="180"
                                        android:src="@drawable/right_arrow"
                                        android:visibility="invisible"></ImageView>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="bottom"
                        android:background="#ffffff"></LinearLayout>

            </FrameLayout>


        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
