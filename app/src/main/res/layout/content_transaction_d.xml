<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.TransactionHistoryModel" />
    </data>

    <androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fillViewport="true"
            android:orientation="vertical"
            android:transitionName="explode"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".view.ui.activity.SingleNewsDetailActivity"
            tools:showIn="@layout/activity_single_news">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/base_margin"
                        android:paddingEnd="@dimen/base_margin">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center|start"
                                android:minHeight="@dimen/_30sdp"
                                android:text="@string/transaction_hash"
                                android:textColor="#000"
                                android:textSize="@dimen/tx_detail_title_text_size"></TextView>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:orientation="horizontal">

                            <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/opensans_regular"
                                    android:gravity="center|end"
                                    android:text="@{model.txId}"
                                    android:textColor="@color/register_asset_input_text_color"
                                    android:textSize="@dimen/tx_detail_detail_text_size"></TextView>
                        </LinearLayout>


                    </LinearLayout>


                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/asset_row_divider_color"></View>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center|start"
                                android:minHeight="@dimen/_30sdp"
                                android:text="Transaction type"
                                android:textColor="#000"
                                android:textSize="@dimen/tx_detail_title_text_size"></TextView>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:orientation="horizontal">

                            <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/opensans_regular"
                                    android:gravity="center|end"
                                    android:text="@{model.type}"
                                    android:textColor="@color/register_asset_input_text_color"
                                    android:textSize="@dimen/tx_detail_detail_text_size"></TextView>
                        </LinearLayout>


                    </LinearLayout>


                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/asset_row_divider_color"></View>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center|start"
                                android:minHeight="@dimen/_30sdp"
                                android:text="Timestamp"
                                android:textColor="#000"
                                android:textSize="@dimen/tx_detail_title_text_size"></TextView>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:orientation="horizontal">

                            <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/opensans_regular"
                                    android:gravity="center|end"
                                    android:text="@{model.timestamp}"
                                    android:textColor="@color/register_asset_input_text_color"
                                    android:textSize="@dimen/tx_detail_detail_text_size"></TextView>
                        </LinearLayout>


                    </LinearLayout>


                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/asset_row_divider_color"></View>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center|start"
                                android:minHeight="@dimen/_30sdp"
                                android:text="@string/input"
                                android:textColor="#000"
                                android:textSize="@dimen/tx_detail_title_text_size"></TextView>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:orientation="horizontal">

                            <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/opensans_regular"
                                    android:gravity="center|end"
                                    android:text="@{model.data}"
                                    android:textColor="@color/register_asset_input_text_color"
                                    android:textSize="@dimen/tx_detail_detail_text_size"></TextView>
                        </LinearLayout>


                    </LinearLayout>


                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/asset_row_divider_color"></View>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>