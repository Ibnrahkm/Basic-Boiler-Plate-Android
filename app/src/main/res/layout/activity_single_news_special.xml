<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.news.details.NewsDetails" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/layout_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:fitsSystemWindows="true"
            tools:context=".view.ui.activity.SingleNewsSpecialDetailActivity">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:fitsSystemWindows="true"
                app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentScrim="#000"
                    app:layout_scrollFlags="exitUntilCollapsed|scroll|snap"
                    app:scrimAnimationDuration="100"
                    app:statusBarScrim="#000">

                <FrameLayout
                        android:id="@+id/hide"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        app:layout_collapseMode="parallax">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:src="@{model.featuredImageUrl}"></ImageView>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shadow_video"></ImageView>

                    <ImageButton
                            android:id="@+id/btn_play"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:src="@drawable/play_button"></ImageButton>
                </FrameLayout>


                <FrameLayout
                        android:id="@+id/hide_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:visibility="gone"
                        app:layout_collapseMode="parallax">

                    <androidx.viewpager.widget.ViewPager
                            android:id="@+id/view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shadow_video"></ImageView>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="@dimen/_45sdp"
                            android:background="@drawable/indicator_bg"
                            android:gravity="center"
                            android:paddingStart="@dimen/_13sdp"
                            android:paddingEnd="@dimen/_13sdp"
                            android:visibility="gone">

                        <com.rd.PageIndicatorView
                                android:id="@+id/pageIndicatorView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:piv_animationType="swap"
                                app:piv_dynamicCount="true"
                                app:piv_interactiveAnimation="true"
                                app:piv_radius="@dimen/_4sdp"
                                app:piv_selectedColor="#ffffff"
                                app:piv_unselectedColor="#9d9d9c"
                                app:piv_viewPager="@id/view_pager" />
                    </LinearLayout>


                </FrameLayout>

                <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <ImageView
                                android:id="@+id/iv_tool_left"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/round_circle"
                                android:padding="@dimen/_8sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/back"></ImageView>

                        <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="0dp"

                                android:layout_height="match_parent"
                                android:layout_weight="1"></TextView>


                        <ImageView
                                android:id="@+id/iv_tool_fav"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/round_circle"
                                android:padding="@dimen/_10sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/save"></ImageView>

                        <ImageView
                                android:id="@+id/iv_tool_share"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/round_circle"
                                android:padding="@dimen/_10sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/share"></ImageView>

                        <ImageView
                                android:id="@+id/iv_tool_text_size"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/round_circle"
                                android:padding="@dimen/_10sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/textsize"></ImageView>
                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollview_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/hide_special"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:visibility="gone">

                    <TextView
                            android:id="@+id/tv_title_to_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:maxLines="2"
                            android:text="@{model.title}"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/single_news_title_size"></TextView>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@{model.publishedAt}"
                                android:textColor="#8a96ad"
                                android:textSize="@dimen/single_news_time_size"></TextView>

                        <TextView
                                android:id="@+id/tv_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/opensans_semibold"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/_16sdp"></TextView>

                        <ImageView
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:src="@drawable/camera"></ImageView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:id="@+id/hide_normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/base_padding_left"
                            android:paddingEnd="@dimen/base_padding_right"
                            android:paddingBottom="@dimen/_15sdp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:maxLines="2"
                                android:text="@{model.title}"
                                android:textColor="#041343"
                                android:textSize="@dimen/single_news_title_size"></TextView>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_7sdp"
                                    android:layout_weight="1.0"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="@{model.publishedAt}"
                                    android:textColor="#8a96ad"
                                    android:textSize="@dimen/single_news_time_size"></TextView>

                            <TextView
                                    android:id="@+id/tv_first_category"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="@{model.primaryCategory.name}"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="#326dfa"
                                    android:textSize="@dimen/single_news_category_size"></TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/author_hide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/base_padding_left"
                            android:paddingEnd="@dimen/base_padding_right">

                        <ImageButton
                                android:id="@+id/btn_add_list"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:src="@drawable/follow_detail"></ImageButton>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center"
                                android:layout_weight="1.0"
                                android:gravity="center|end"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/tv_first_author_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_3sdp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="@{model.author.get(0).name}"
                                    android:textColor="#041343"
                                    android:textSize="@dimen/_16sdp"></TextView>

                            <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_author"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:src="@drawable/ava_link"

                                    app:src="@{model.author.get(0).avatar}"></de.hdodenhof.circleimageview.CircleImageView>


                        </LinearLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                            android:id="@+id/layout_notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/base_padding_left"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/base_padding_right"
                            android:visibility="gone"
                            app:cardBackgroundColor="#f8f9fc"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp"
                            app:cardUseCompatPadding="false"
                            app:contentPadding="@dimen/_10sdp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                <ImageButton
                                        android:id="@+id/btn_edit_note"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/edit_note"></ImageButton>

                                <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"></View>

                                <ImageView
                                        android:layout_width="@dimen/_45sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/notice"></ImageView>
                            </LinearLayout>

                            <TextView
                                    android:id="@+id/tv_notes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/opensans_medium"
                                    android:text="ئه‌م هه‌واڵه‌ بابه‌تی كۆنگره‌ی نێوده‌وله‌تییه‌ و به‌ فێركاری زیاد باسی ده‌كرێته‌وه‌. پێویسته‌ بزانم ڕوژێكی پێش تۆماركردنی ئه‌م هه‌واڵه‌ چیه‌."
                                    android:textColor="#041343"
                                    android:textSize="@dimen/_13sdp"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:paddingStart="@dimen/base_padding_left"
                                android:paddingEnd="@dimen/base_padding_right"
                                android:text="ئاڤا نیوز"
                                android:textColor="#041343"
                                android:textSize="@dimen/_17sdp"
                                android:visibility="gone"></TextView>


                        <WebView
                                android:id="@+id/tv_contents"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:nestedScrollingEnabled="false"
                                android:text="@string/demo_detail_news"
                                android:textColor="#041343"></WebView>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:paddingStart="@dimen/base_padding_left"
                                android:paddingEnd="@dimen/base_padding_right"
                                android:text="زیاتر لەسەر ئەم بابەتانە بکۆڵەرەوە"
                                android:textColor="#61708c"
                                android:textSize="@dimen/_16sdp"
                                android:visibility="gone"></TextView>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/tabs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:background="#ffffff"
                                android:layoutDirection="rtl"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/layout_tab_row"></androidx.recyclerview.widget.RecyclerView>


                        <LinearLayout
                                android:id="@+id/images_gallery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                            <View
                                    android:id="@+id/view1"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_marginBottom="@dimen/_15sdp"
                                    android:background="#1b3066"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:paddingEnd="@dimen/_5sdp"></View>

                            <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rec_gallery"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:nestedScrollingEnabled="false"
                                    android:orientation="vertical"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#ffffff"
                                android:orientation="vertical">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingStart="@dimen/base_padding_left"
                                    android:paddingEnd="@dimen/base_padding_right">

                                <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="@dimen/_10sdp"

                                        android:layout_weight="1.0"
                                        android:src="@drawable/scoop_line"></ImageView>

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:text="هەواڵی پەیوەندیدار"
                                        android:textColor="#041443"
                                        android:textSize="@dimen/_20sdp"></TextView>
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rec"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_10sdp"
                                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                    app:spanCount="2"
                                    android:layoutDirection="rtl"
                                    tools:listitem="@layout/layout_third_tab_data_row"></androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
                android:id="@+id/cat"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center|top|end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/round_botom"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                app:behavior_overlapTop="@dimen/_17sdp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/opensans_medium"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="@{model.primaryCategory.name}"
                    android:textColor="#ffffff"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/single_news_followup_size"></TextView>
        </LinearLayout>

        <ImageButton
                android:id="@+id/btn_opinion"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center|top|end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/flowbite"
                android:visibility="gone"
                app:behavior_overlapTop="@dimen/_20sdp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"></ImageButton>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
