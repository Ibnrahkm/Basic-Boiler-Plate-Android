<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.podcasts.Podcast" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_12sdp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/demo1"
                        app:src="@{model.featuredImageUrl}"></ImageView>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shadow_video"></ImageView>
            </FrameLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/video_text_bg"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start">

                    <TextView
                            android:id="@+id/tv_first_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="@{model.mediaDuration}"
                            android:textColor="#8a96ad"
                            android:textSize="@dimen/normal_time_size"></TextView>

                    <TextView
                            android:id="@+id/tv_first_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                            android:fontFamily="@font/opensans_semibold"
                            android:visibility="gone"
                            android:textColor="#326dfa"
                            android:textSize="@dimen/normal_category_size"></TextView>
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@{model.title}"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_12sdp"></TextView>
            </LinearLayout>

        </LinearLayout>

        <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/play_button"></ImageButton>
    </androidx.cardview.widget.CardView>
</layout>
