<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.stories.Story" />
    </data>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/divider"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/tv_devider"
                android:visibility="gone"></ImageView>

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                        android:id="@+id/tv_card"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        app:cardBackgroundColor="#455efa"
                        app:cardCornerRadius="@dimen/_40sdp"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="@dimen/_53sdp"
                            android:layout_height="@dimen/_53sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/demo1"
                            app:civ_border_color="#ffffff"
                            app:civ_border_width="@dimen/_3sdp"
                            app:civ_circle_background_color="#ffffff"
                            app:src="@{model.thumbnail}"></de.hdodenhof.circleimageview.CircleImageView>

                </androidx.cardview.widget.CardView>

                <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:id="@+id/live"
                        android:visibility="gone"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/live"></ImageView>
            </FrameLayout>


            <TextView
                    android:id="@+id/tv_stories_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@{model.title}"
                    android:textColor="#0c1a45"
                    android:textSize="@dimen/_11sdp"></TextView>
        </LinearLayout>

    </LinearLayout>
</layout>
