<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.news.home.Data" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">
            <com.ibt.ava.util.TouchDetectableScrollView
                    android:id="@+id/layout_original"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <include
                            android:id="@+id/breaking_news_section"
                            layout="@layout/layout_first_section"
                            android:visibility="visible"
                            bind:model="@{model}"></include>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_6sdp"
                            android:background="@color/home_divider_color"></View>

                    <include
                            android:id="@+id/fast_news_section"
                            layout="@layout/layout_second_section"
                            android:visibility="visible"
                            bind:model="@{model}"></include>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_6sdp"
                            android:background="@color/home_divider_color"></View>

                    <include
                            android:id="@+id/third_section"
                            layout="@layout/layout_third_section"
                            android:visibility="visible"
                            bind:model="@{model}"></include>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_6sdp"
                            android:background="@color/home_divider_color"></View>

                    <LinearLayout
                            android:id="@+id/layout_to_hide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <include
                                android:id="@+id/scoop_section"
                                layout="@layout/layout_fourth_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>

                        <include
                                android:id="@+id/latest_section"
                                layout="@layout/layout_latest_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>

                        <include
                                android:id="@+id/kurdistan_news"
                                layout="@layout/layout_fifth_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>

                        <include
                                android:id="@+id/iraq_news_section"
                                layout="@layout/layout_sixth_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>

                        <include
                                android:id="@+id/world_news_section"
                                layout="@layout/layout_eighth_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>
                        <include
                                android:id="@+id/business_news_section"
                                layout="@layout/layout_seven_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>
                        <include
                                android:id="@+id/opinion_news_section"
                                layout="@layout/layout_nineth_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>

                        <include
                                android:id="@+id/multimedia_news_section"
                                layout="@layout/layout_tenth_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>

                        <include
                                android:id="@+id/report_section"
                                layout="@layout/layout_sixth_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>

                        <include
                                android:id="@+id/health_section"
                                layout="@layout/layout_fifth_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>

                        <include
                                android:id="@+id/culture_section"
                                layout="@layout/layout_sixth_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>

                        <include
                                android:id="@+id/environments_section"
                                layout="@layout/layout_fifth_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>
                        <include
                                android:id="@+id/podcast_news_section"
                                layout="@layout/layout_twelve_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                android:background="@color/home_divider_color"></View>

                        <include
                                android:id="@+id/weather_news_section"
                                layout="@layout/layout_thirteen_section"
                                android:visibility="visible"
                                bind:model="@{model}"></include>
                    </LinearLayout>


                </LinearLayout>
            </com.ibt.ava.util.TouchDetectableScrollView>
        <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:shimmer_direction="left_to_right"
                android:id="@+id/shimmarLayout">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D3D3D3"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|end"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                app:cardBackgroundColor="#455efa"
                                app:cardCornerRadius="@dimen/_40sdp"
                                app:cardElevation="0dp"
                                app:cardPreventCornerOverlap="false"></androidx.cardview.widget.CardView>

                        <View

                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:background="#000"></View>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:orientation="vertical">

                        <androidx.cardview.widget.CardView

                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                app:cardBackgroundColor="#455efa"
                                app:cardCornerRadius="@dimen/_40sdp"
                                app:cardElevation="0dp"
                                app:cardPreventCornerOverlap="false"></androidx.cardview.widget.CardView>

                        <View
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:background="#000"></View>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                app:cardBackgroundColor="#455efa"
                                app:cardCornerRadius="@dimen/_40sdp"
                                app:cardElevation="0dp"
                                app:cardPreventCornerOverlap="false"></androidx.cardview.widget.CardView>

                        <View
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:background="#000"></View>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                app:cardBackgroundColor="#455efa"
                                app:cardCornerRadius="@dimen/_40sdp"
                                app:cardElevation="0dp"
                                app:cardPreventCornerOverlap="false"></androidx.cardview.widget.CardView>

                        <View
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:background="#000"></View>
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:cardBackgroundColor="#000"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"></ImageView>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1.0"
                            app:cardBackgroundColor="#000"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp">

                        <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"></ImageView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1.0"
                            app:cardBackgroundColor="#000"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp">

                        <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"></ImageView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1.0"
                            app:cardBackgroundColor="#000"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp">

                        <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"></ImageView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1.0"
                            app:cardBackgroundColor="#000"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp">

                        <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"></ImageView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1.0"
                            app:cardBackgroundColor="#000"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp">

                        <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"></ImageView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1.0"
                            app:cardBackgroundColor="#000"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp">

                        <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"></ImageView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>
    </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>
