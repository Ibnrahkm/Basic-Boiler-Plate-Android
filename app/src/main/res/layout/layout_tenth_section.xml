<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.news.home.Data" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout_tenth_screen_body"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_600sdp"
            android:background="@drawable/home_video_screen"
            android:fillViewport="true"
            android:orientation="vertical"

            android:paddingTop="@dimen/base_padding_top"
            android:paddingBottom="@dimen/base_padding_bottom">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/base_padding_left"
                android:paddingEnd="@dimen/base_padding_right">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1.0"
                        android:src="@drawable/scoop_line"></ImageView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="ببینە و ببیستە"
                        android:textColor="#ffffff"
                        android:id="@+id/btn_tenth_section"
                        android:textSize="@dimen/normal_top_title_size"></TextView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_first_news"
                    android:layout_width="match_parent"
                    app:cardElevation="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_28sdp"
                    app:cardCornerRadius="@dimen/_12sdp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/image_news_first"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_170sdp"
                                android:scaleType="centerCrop"></ImageView>

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_170sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shadow_video"></ImageView>
                    </FrameLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_125sdp"
                            android:background="@drawable/video_text_bg"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                        <TextView
                                android:id="@+id/tv_first_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/normal_title_size"></TextView>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:orientation="horizontal">

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.0"
                                    android:gravity="end">

                                <TextView
                                        android:id="@+id/tv_first_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/opensans_regular"
                                        android:textColor="#ededed"
                                        android:textSize="@dimen/normal_time_size"></TextView>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center|top|start"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ava"></ImageView>

                <ImageButton
                        android:id="@+id/btn_play"
                        android:layout_width="@dimen/_56sdp"
                        android:layout_height="@dimen/_56sdp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:src="@drawable/play_button"></ImageButton>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_videos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingStart="@dimen/base_padding_left"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/layout_home_screen_video_row"></androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>
</layout>
