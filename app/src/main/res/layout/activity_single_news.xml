<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.news.details.NewsDetails" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:fitsSystemWindows="true"
            tools:context=".view.ui.activity.SingleNewsDetailActivity">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:fitsSystemWindows="true"
                app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentScrim="#000"
                    app:layout_scrollFlags="exitUntilCollapsed|scroll|snap"
                    app:scrimAnimationDuration="100"
                    app:statusBarScrim="#000">

                <FrameLayout
                        android:id="@+id/hide"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        app:layout_collapseMode="parallax">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:src="@{model.featuredImageUrl}"></ImageView>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shadow_video"></ImageView>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:maxLines="2"
                                android:text="@{model.title}"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/single_news_title_size"></TextView>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_7sdp"
                                    android:layout_weight="1.0"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="@{model.publishedAt}"
                                    android:textColor="#ededed"
                                    android:textSize="@dimen/single_news_time_size"></TextView>

                            <TextView
                                    android:id="@+id/tv_first_category"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:maxLines="1"
                                    android:text="@{model.primaryCategory.name}"
                                    android:textColor="#326dfa"
                                    android:textSize="@dimen/single_news_category_size"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>


                <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:orientation="horizontal"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <ImageView
                                android:id="@+id/iv_tool_left"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/round_circle"
                                android:padding="@dimen/_8sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/back"></ImageView>

                        <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="0dp"

                                android:layout_height="match_parent"
                                android:layout_weight="1"></TextView>


                        <ImageView
                                android:id="@+id/iv_tool_fav"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/round_circle"
                                android:padding="@dimen/_10sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/save"></ImageView>

                        <ImageView
                                android:id="@+id/iv_tool_share"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/round_circle"
                                android:padding="@dimen/_10sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/share"></ImageView>

                        <ImageView
                                android:id="@+id/iv_tool_text_size"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/round_circle"
                                android:padding="@dimen/_10sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/textsize"></ImageView>
                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_15sdp">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp">

                    <ImageButton
                            android:id="@+id/btn_add_list"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:src="@drawable/follow_detail"></ImageButton>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:layout_weight="1.0"
                            android:gravity="center|end"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/tv_first_author_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@{model.author.get(0).name}"
                                android:textColor="#041343"
                                android:textSize="@dimen/_16sdp"></TextView>

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_author"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:src="@drawable/ava_link"
                                app:src="@{model.author.get(0).avatar}"></de.hdodenhof.circleimageview.CircleImageView>


                    </LinearLayout>

                </LinearLayout>


                <androidx.cardview.widget.CardView
                        android:id="@+id/layout_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:visibility="gone"
                        app:cardBackgroundColor="#f8f9fc"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp"

                        app:cardUseCompatPadding="false"
                        app:contentPadding="@dimen/_10sdp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <ImageButton
                                    android:id="@+id/btn_edit_note"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/edit_note"></ImageButton>

                            <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"></View>

                            <ImageView
                                    android:layout_width="@dimen/_45sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/notice"></ImageView>
                        </LinearLayout>

                        <TextView
                                android:id="@+id/tv_notes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:fontFamily="@font/opensans_medium"
                                android:text="ئه‌م هه‌واڵه‌ بابه‌تی كۆنگره‌ی نێوده‌وله‌تییه‌ و به‌ فێركاری زیاد باسی ده‌كرێته‌وه‌. پێویسته‌ بزانم ڕوژێكی پێش تۆماركردنی ئه‌م هه‌واڵه‌ چیه‌."
                                android:textColor="#041343"
                                android:textSize="@dimen/_13sdp"></TextView>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:text="ئاڤا نیوز"
                            android:textColor="#041343"

                            android:textSize="@dimen/_17sdp"
                            android:visibility="gone"></TextView>


                    <WebView
                            android:id="@+id/tv_contents"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_12sdp"

                            android:fontFamily="@font/opensans_regular"
                            android:nestedScrollingEnabled="false"
                            android:text="@string/demo_detail_news"
                            android:textColor="#041343"></WebView>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"

                            android:text="زیاتر لەسەر ئەم بابەتانە بکۆڵەرەوە"
                            android:textColor="#61708c"
                            android:textSize="@dimen/_16sdp"
                            android:visibility="gone"></TextView>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="#ffffff"
                            android:layoutDirection="rtl"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/layout_tab_row"></androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_10sdp"

                            android:paddingEnd="@dimen/_10sdp">

                        <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="1.0"
                                android:src="@drawable/scoop_line"></ImageView>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="هەواڵی پەیوەندیدار"
                                android:textColor="#041443"
                                android:textSize="@dimen/_20sdp"></TextView>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layoutDirection="rtl"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="2"
                            tools:listitem="@layout/layout_third_tab_data_row"></androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
