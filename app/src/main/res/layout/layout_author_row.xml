<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.follow.Datum" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center|end"
                android:orientation="horizontal">

            <ImageButton
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:id="@+id/btn_unfollow"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_unfollow_author"></ImageButton>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_first_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center|end"
                        android:text="@{model.name}"
                        android:textColor="#041343"
                        android:textSize="@dimen/_16sdp"></TextView>

                <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center|end"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#8897AE"
                        android:textSize="@dimen/_12sdp"></TextView>
            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_author"
                    android:layout_width="@dimen/_47sdp"
                    android:layout_height="@dimen/_47sdp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ava_link"
                    app:src="@{model.avatar}"></de.hdodenhof.circleimageview.CircleImageView>


        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#f4f4f4"></View>
    </LinearLayout>
</layout>
