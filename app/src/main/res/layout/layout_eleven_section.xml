<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.news.home.Data" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layoutElevenScreenBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:fillViewport="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/base_padding_left"
            android:paddingTop="@dimen/base_padding_top"
            android:paddingEnd="@dimen/base_padding_right"
            android:paddingBottom="@dimen/base_padding_bottom">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1.0"
                        android:src="@drawable/scoop_line"></ImageView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="بزنس"
                        android:textColor="#041443"
                        android:textSize="@dimen/normal_top_title_size"></TextView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/image_news_first"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/demo1"></ImageView>

                        <ImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center|top|start"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ava"></ImageView>

                    </FrameLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/tv_first_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:text="سەرۆک بارزانی لە بەغدا کۆتایی بە سەردانەکانی هێنا و دەگەڕێتەوە هەولێر"
                                android:textColor="#041343"
                                android:textSize="@dimen/normal_title_size"></TextView>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:orientation="horizontal">

                            <ImageButton
                                    android:layout_width="@dimen/normal_dot_size_width"
                                    android:layout_height="@dimen/normal_dot_size_height"
                                    android:background="?attr/selectableItemBackground"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/dots"
                                    android:visibility="gone"></ImageButton>

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.0"
                                    android:gravity="end">

                                <TextView
                                        android:id="@+id/tv_first_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="@dimen/_7sdp"
                                        android:fontFamily="@font/opensans_regular"
                                        android:text="10 خولەک خوێندنەوە"
                                        android:textColor="#8a96ad"
                                        android:textSize="@dimen/normal_time_size"></TextView>

                                <TextView
                                        android:id="@+id/tv_first_category"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:text="هەواڵ"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textColor="#326dfa"
                                        android:textSize="@dimen/normal_category_size"></TextView>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#f4f4f4"></View>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/layout_fifth_row"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
</layout>
