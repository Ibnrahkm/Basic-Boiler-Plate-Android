<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.news.podcast.Podcast" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:background="@drawable/author_status_bg"
                android:fitsSystemWindows="true"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|snap">

                <com.ibt.ava.util.StatusBarView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/status"></com.ibt.ava.util.StatusBarView>

                <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="center"
                        app:contentInsetLeft="0dp"
                        android:fitsSystemWindows="true"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/AppTheme.PopupOverlay">

                    <LinearLayout
                            android:id="@+id/layout_settings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end|bottom"
                            android:layout_marginStart="@dimen/base_padding_left"
                            android:layout_marginEnd="@dimen/base_padding_right"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fitsSystemWindows="true"
                            android:gravity="center|end"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            app:layout_collapseMode="parallax">

                        <ImageButton
                                android:id="@+id/btn_back"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:src="@drawable/arrow_back"></ImageButton>

                        <TextView
                                android:id="@+id/tv_category_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="پرۆفایل"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/normal_top_title_size"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:visibility="invisible"></TextView>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:behavior_overlapTop="@dimen/_40sdp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/btn_play"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_gravity="center|top"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ava_link"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="@dimen/_2sdp"></de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/opensans_semibold"
                        android:paddingStart="@dimen/base_padding_left"
                        android:paddingEnd="@dimen/base_padding_right"
                        android:text="@{model.name}"
                        android:textAlignment="center"
                        android:textColor="#041343"
                        android:textSize="@dimen/_20sdp"></TextView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/opensans_regular"
                        android:paddingStart="@dimen/base_padding_left"
                        android:paddingEnd="@dimen/base_padding_right"
                        android:text="@{model.summary}"
                        android:maxLines="3"
                        android:textAlignment="center"
                        android:textColor="#6c7387"
                        android:textSize="@dimen/_12sdp"></TextView>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/base_padding_left"

                        android:paddingEnd="@dimen/base_padding_right">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1.0"
                            android:src="@drawable/scoop_line"></ImageView>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="ئەڵقەکان"
                            android:textColor="#041443"
                            android:textSize="@dimen/_18sdp"></TextView>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2"
                        android:layoutDirection="rtl"
                        tools:listitem="@layout/layout_podcast_row"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
