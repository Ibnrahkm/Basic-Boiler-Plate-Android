<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                name="model"
                type="com.ibt.ava.service.model.notifications.Datum" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|end"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_first_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center|start"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@{model.body}"
                        android:textAlignment="textStart"
                        android:textColor="#041343"
                        android:textSize="@dimen/_16sdp"></TextView>

                <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center|end"
                        android:text="@{model.publishAt}"
                        android:textColor="#8897AE"

                        android:textSize="@dimen/_12sdp"></TextView>
            </LinearLayout>


            <androidx.cardview.widget.CardView

                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                <ImageView

                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:scaleType="centerCrop"
                        app:src="@{model.image}"
                        android:src="@drawable/demo1"></ImageView>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#f4f4f4"></View>
    </LinearLayout>
</layout>
