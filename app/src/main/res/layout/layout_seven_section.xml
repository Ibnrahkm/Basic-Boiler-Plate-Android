<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.news.home.Data" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout_seven_screen_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:fillViewport="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/base_padding_left"
            android:paddingTop="@dimen/base_padding_top"
            android:paddingEnd="@dimen/base_padding_right"
            android:paddingBottom="@dimen/base_padding_bottom">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1.0"
                        android:src="@drawable/scoop_line"></ImageView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="بزنس"
                        android:id="@+id/btn_seven_section"
                        android:textColor="#041443"
                        android:textSize="@dimen/normal_top_title_size"></TextView>
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/btn_first_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:cardCornerRadius="@dimen/_10sdp"

                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <ImageView
                                android:id="@+id/image_news_first"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/demo1"></ImageView>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/tv_first_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:textColor="#041343"
                                    android:textSize="@dimen/normal_title_size"></TextView>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:orientation="horizontal">

                                <ImageButton
                                        android:layout_width="@dimen/normal_dot_size_width"
                                        android:layout_height="@dimen/normal_dot_size_height"
                                        android:background="?attr/selectableItemBackground"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/dots"
                                        android:visibility="gone"></ImageButton>

                                <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.0"
                                        android:gravity="end">

                                    <TextView
                                            android:id="@+id/tv_first_time"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginEnd="@dimen/_7sdp"
                                            android:fontFamily="@font/opensans_regular"
                                            android:textColor="#8a96ad"
                                            android:textSize="@dimen/normal_time_size"></TextView>

                                    <TextView
                                            android:id="@+id/tv_first_category"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/opensans_semibold"
                                            android:textColor="#326dfa"
                                            android:maxLines="1"
                                            android:ellipsize="end"
                                            android:textSize="@dimen/normal_category_size"></TextView>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#f4f4f4"></View>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/layout_fifth_row"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                    android:id="@+id/exchange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/exchange_bg_main"
                    android:gravity="center"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_exchange"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_weight="1.0"
                        android:ellipsize="marquee"
                        android:fontFamily="@font/opensans_medium"
                        android:layoutDirection="rtl"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingEnd="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text="1IQD = 0.00076USD"
                        android:textColor="#ffffff"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_14sdp"></TextView>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/exchange_bg">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:padding="@dimen/_10sdp"
                            android:text="گۆڕینەوەی دراوەکان"
                            android:textColor="#041343"
                            android:textSize="@dimen/_14sdp"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
