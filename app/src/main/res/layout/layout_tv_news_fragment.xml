<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">


    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:orientation="vertical">




        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="#000000"
                android:fitsSystemWindows="true"
                android:theme="@style/AppTheme.AppBarOverlay">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|snap">

                <com.ibt.ava.util.StatusBarView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/status"></com.ibt.ava.util.StatusBarView>

                <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="center|bottom"
                        android:fitsSystemWindows="true"
                        app:contentInsetLeft="0dp"
                        android:layout_marginBottom="@dimen/_5sdp"

                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/AppTheme.PopupOverlay">

                    <LinearLayout
                            android:id="@+id/layout_settings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:layout_marginStart="@dimen/base_padding_left"
                            android:layout_marginEnd="@dimen/base_padding_right"
                            android:fitsSystemWindows="true"
                            android:gravity="center|end"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            app:layout_collapseMode="parallax">

                        <ImageButton
                                android:id="@+id/btn_back"
                                android:layout_width="@dimen/_21sdp"
                                android:layout_height="@dimen/_21sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                app:tint="#ffffff"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:src="@drawable/cross_black"></ImageButton>

                        <TextView
                                android:id="@+id/tv_category_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/opensans_semibold"
                                android:textColor="#ffffff"
                                android:maxLines="1"
                                android:visibility="gone"
                                android:ellipsize="end"
                                android:textSize="@dimen/normal_top_title_size"></TextView>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <WebView
                    android:id="@+id/webview"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></WebView>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
