<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="model"
                type="com.ibt.ava.service.model.news.home.Featurednews" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/layout_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:visibility="gone">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                    <ImageView
                            android:id="@+id/tv_second_image"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_110sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/demo1"
                            app:src="@{model.featuredImageUrl}"></ImageView>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/tv_second_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/opensans_semibold"
                                android:maxLines="2"
                                android:text="@{model.title}"
                                android:textColor="#041343"
                                android:textSize="@dimen/list_vertical_title_size"></TextView>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:orientation="horizontal">

                            <ImageButton
                                    android:layout_width="@dimen/list_vertical_dot_width"
                                    android:layout_height="@dimen/list_vertical_dot_height"
                                    android:background="?attr/selectableItemBackground"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/dots"
                                    android:visibility="gone"></ImageButton>

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.0"
                                    android:gravity="start">
                                <TextView
                                        android:id="@+id/tv_second_category"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginEnd="@dimen/_7sdp"
                                        android:text="@{model.category.get(0).name}"
                                        android:textColor="#326dfa"
                                        android:textSize="@dimen/list_horizontal_category_size"></TextView>

                                <TextView
                                        android:id="@+id/tv_second_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/opensans_regular"
                                        android:maxLines="1"
                                        android:text="@{model.publishedAt}"
                                        android:textColor="#8a96ad"
                                        android:textSize="@dimen/list_horizontal_time_size"></TextView>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
                android:id="@+id/layout_scoop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_weight="1.0"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_110sdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/demo1"
                            app:src="@{model.featuredImageUrl}"></ImageView>

                    <ImageView
                            android:layout_width="@dimen/_61sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_gravity="start|bottom"
                            android:src="@drawable/scoop"></ImageView>
                </FrameLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#010435"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_3sdp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/opensans_semibold"
                                android:maxLines="2"
                                android:text="@{model.title}"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/list_vertical_title_size"></TextView>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:orientation="horizontal">

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.0"
                                    android:gravity="start">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"

                                        android:fontFamily="@font/opensans_regular"
                                        android:text="@{model.publishedAt}"
                                        android:textColor="#8a96ad"
                                        android:textSize="@dimen/list_vertical_time_size"></TextView>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/layout_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_weight="1.0"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_110sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/demo1"
                            app:src="@{model.featuredImageUrl}"></ImageView>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_110sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shadow_video"></ImageView>
                </FrameLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/video_text_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/opensans_semibold"
                            android:maxLines="2"
                            android:text="@{model.title}"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_12sdp"></TextView>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@{model.publishedAt}"
                            android:textColor="#ededed"
                            android:textSize="@dimen/_10sdp"></TextView>
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                    android:id="@+id/btn_play"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:src="@drawable/play_button"></ImageButton>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/layout_opinion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_weight="1.0"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_125sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rec_bg"
                    android:gravity="bottom"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/opensans_semibold"
                        android:maxLines="2"
                        android:text="@{model.title}"
                        android:textColor="#041343"
                        android:textSize="@dimen/list_vertical_title_size"></TextView>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_margin="@dimen/_5sdp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@{model.publishedAt}"
                            android:textColor="#8a96ad"
                            android:textSize="@dimen/list_author_time_size"></TextView>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/flowbite"></ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/layout_gallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_weight="1.0"
                app:cardElevation="0dp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/demo1"
                        app:src="@{model.featuredImageUrl}"></ImageView>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_3sdp">

                    <TextView
                            android:id="@+id/tv_first_title_images"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/opensans_semibold"
                            android:maxLines="2"
                            android:text="@{model.title}"
                            android:textColor="#041343"
                            android:textSize="@dimen/list_vertical_title_size"></TextView>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:gravity="start">

                        <TextView
                                android:id="@+id/tv_first_time_images"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:maxLines="1"
                                android:text="@{model.publishedAt}"
                                android:textColor="#8a96ad"
                                android:textSize="@dimen/list_horizontal_time_size"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
