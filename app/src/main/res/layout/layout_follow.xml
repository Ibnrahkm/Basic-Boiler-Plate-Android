<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardBackgroundColor="#ffffff">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/base_padding_left"
                    android:layout_marginTop="@dimen/base_padding_top"
                    android:layout_marginEnd="@dimen/base_padding_right"
                    android:layout_marginBottom="@dimen/base_padding_bottom"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageButton
                            android:id="@+id/btn_cancel"
                            android:layout_width="@dimen/_21sdp"
                            android:layout_height="@dimen/_21sdp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:src="@drawable/cross_black"></ImageButton>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center"
                                android:text="هەواڵەکان پاشەکەوت بکە"
                                android:textColor="#000000"
                                android:textSize="@dimen/_14sdp"></TextView>
                    </LinearLayout>

                    <ImageButton
                            android:layout_width="@dimen/_21sdp"
                            android:layout_height="@dimen/_21sdp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:src="@drawable/cross_black"
                            android:visibility="invisible"></ImageButton>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="#f8f8f8"></View>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="تکایە تێبینی یان کۆنتێکستی زیادە بۆ هەواڵەکە دابین بکەن. هەر وردەکارییەکی پەیوەندیدار یان زانیاری گرنگ لەخۆ بگرێت"
                            android:textColor="#4f4f4f"
                            android:textSize="@dimen/_13sdp"></TextView>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_border"
                            android:backgroundTint="#d8dde8">

                        <EditText
                                android:id="@+id/et_follow_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:fontFamily="@font/opensans_regular"
                                android:gravity="center|start|top"
                                android:hint="|لێرەدا دەق تێبینی بکە"
                                android:inputType="textLongMessage"
                                android:minHeight="@dimen/_100sdp"
                                android:textDirection="rtl"
                                android:padding="@dimen/_8sdp"
                                android:textColor="@color/register_asset_input_text_color"
                                android:textColorHint="@color/register_asset_input_text_hint_color"
                                android:textSize="@dimen/_13sdp"></EditText>


                    </LinearLayout>
                </LinearLayout>

                <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:text="هەواڵەکان پاشەکەوت بکە"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_13sdp"
                        android:id="@+id/btn_submit"
                        android:fontFamily="@font/opensans_regular"
                        android:background="@drawable/btn_blue"></Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>
