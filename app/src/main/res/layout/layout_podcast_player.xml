<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#021446"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                android:src="@drawable/pod_backk"></ImageView>

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:background="#021446"
                android:fitsSystemWindows="true"
                android:gravity="center"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fitsSystemWindows="true"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                <LinearLayout
                        android:id="@+id/layout_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/base_padding_left"
                        android:layout_marginEnd="@dimen/base_padding_right"
                        android:fitsSystemWindows="true"
                        android:gravity="center|end"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        app:layout_collapseMode="parallax">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center|end"
                            android:orientation="horizontal">

                        <ImageButton
                                android:id="@+id/btn_dismiss"
                                android:layout_width="@dimen/_21sdp"
                                android:layout_height="@dimen/_21sdp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitCenter"
                                android:src="@drawable/cross_black"
                                app:tint="#fff"></ImageButton>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:layout_weight="1.0"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/tv_first_author_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|end"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:gravity="center|end"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/_11sdp"></TextView>

                            <TextView
                                    android:id="@+id/tv_category"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|end"
                                    android:fontFamily="@font/opensans_regular"
                                    android:gravity="center|end"
                                    android:textColor="#8897AE"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textSize="@dimen/_9sdp"></TextView>
                        </LinearLayout>


                        <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:cardElevation="0dp"
                                app:cardPreventCornerOverlap="false">

                            <ImageView
                                    android:id="@+id/iv_author"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="?attr/selectableItemBackground"
                                    android:src="@drawable/ava_link"></ImageView>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.media3.ui.PlayerView
                    android:id="@+id/player_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:visibility="gone"
                    app:bar_gravity="bottom"
                    app:hide_on_touch="false"
                    app:resize_mode="fixed_height"
                    app:use_controller="true" />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center|end|top"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center|end|top"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textAlignment="viewEnd"
                        android:textColor="#ffffff"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_22sdp"></TextView>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                      android:layout_marginBottom="@dimen/_30sdp"
                        android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatSeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progressBackgroundTint="@color/blue"
                            android:progressTint="#fff"
                            android:id="@+id/seekbar"
                            android:thumb="@drawable/thumb"
                            android:thumbTint="#fff"></androidx.appcompat.widget.AppCompatSeekBar>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/tv_start_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/opensans_medium"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:text="00:00:00"
                                android:textAlignment="viewStart"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/_15sdp"></TextView>

                        <TextView
                                android:id="@+id/tv_end_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/opensans_medium"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:text="00:00:00"
                                android:textAlignment="viewEnd"
                                android:textColor="#ffffff"
                                android:textDirection="rtl"
                                android:textSize="@dimen/_15sdp"></TextView>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <ImageButton
                                android:id="@+id/btn_prev"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:adjustViewBounds="true"

                                android:background="?attr/selectableItemBackground"
                                android:scaleType="fitCenter"
                                android:src="@drawable/prev"></ImageButton>

                        <ImageButton
                                android:id="@+id/btn_play_pause"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:adjustViewBounds="true"
                                android:background="?attr/selectableItemBackground"
                                android:scaleType="fitCenter"

                                android:src="@drawable/pause"></ImageButton>

                        <ImageButton
                                android:id="@+id/btn_next"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:adjustViewBounds="true"
                                android:background="?attr/selectableItemBackground"
                                android:scaleType="fitCenter"
                                android:src="@drawable/next"></ImageButton>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
